    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            function filterUser(searchTerm, seletedStatus, sortOrder) {
                console.log("Filtering jobs...", searchTerm, seletedStatus);

                $.ajax({
                    url: '@Url.Action("FilterJob", "Admin")',
                    type: 'GET',
                    traditional: true,
                    data: {
                        searchTerm: searchTerm,
                        seletedStatus: seletedStatus,
                        sortOrder : sortOrder,

                    },
                    success: function (result) {
                        $('#userlistcontainer').html(result);
                    },
                    error: function (xhr, status, error) {
                        console.log("Error:", error);
                    }
                });
            }
            function applyFilters() {
                var searchTerm = $('#searchnamebox').val();
                var seletedStatus = $('.custom-control-input:checked').val();
                var sortOrder = $('#sortOptions').val();

                filterUser(searchTerm, seletedStatus, sortOrder);

            }
            $('#searchnamebox').on('keyup', function () {
                applyFilters();
            });
            $('.custom-control-input').change(function () {
                applyFilters();
            });
            $('#sortOptions').change(function () {
                applyFilters();
            });

        });
    </script>
