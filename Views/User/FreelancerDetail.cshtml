@{
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
@using PBL3.ViewModels
@model FreelancerDetailViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Freelancer Detail</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css//FreelancerDetail.css">
    <style>
        
        
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">@Model.UserName</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <img src="~/image//cropped-1920-1080-1339443.png" class="img-fluid rounded-circle" alt="Avatar">
                    </div>
                    <div class="col-md-8">
                        <p class="card-text"><strong>Email:</strong> @Model.email</p>
                        <p class="card-text"><strong>FirstName:</strong> @Model.FirstName</p>
                        <p class="card-text"><strong>LastName:</strong> @Model.LastName</p>
                        <p class="card-text"><strong>Rating:</strong> @Model.Rating</p>
                        <p class="card-text"><strong>Country:</strong> @Model.Country</p>
                        <p class="card-text"><strong>Description:</strong> @Model.Description</p>
                        <p class="card-text"><strong>Skills:</strong></p>
                        <div class="skills">
                            @foreach (var skill in Model.Skills)
                            {
                                <span class="badge badge-dark">@skill</span>
                            }
                        </div>
                        <p class="card-text"><strong>CreateAt:</strong> @Model.CreatedAt</p>
                    </div>
                </div>
              @*   <div class="row justify-content-end mt-3">
                    <div class="col-md-8 text-right">
                        <button class="btn btn-dark">Hire</button>
                    </div>
                </div> *@
            </div>
                    
                </div>
            </div>
        </div>
    </div>
</body>
</html>