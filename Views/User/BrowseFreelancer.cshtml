@using PBL3.ViewModels
@{
    Layout = null;
}
@model List<BrowseFreelancerView>

<!DOCTYPE html>
<html>

<head>
    <title>BrowseFreelancer</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/css//BrowseFreelancer.css">

    <style>
        

        body {
            font-family: "Inria Sans", sans-serif;
            overflow-x: hidden;
            margin: 0px;
        }

        .freelancer-card {
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 15px;
            margin-bottom: 20px;
            background-color: #fff;
            display: flex;
            align-items: center;
            color: #000000; /* Màu đen */
            text-decoration: none; /* Loại bỏ gạch chân */
            
        }
        

            .freelancer-card img {
                border-radius: 50%;
                width: 100px;
                height: 100px;
                object-fit: cover;
                margin-right: 15px;
                

            }

            .freelancer-card h5 {
                font-size: 1.5em;
                margin: 0 0 10px;
            }

            .freelancer-card p {
                margin: 5px 0;
            }

            .freelancer-card .skills {
                display: flex;
                flex-wrap: wrap;
                
                text-decoration: none; /* Loại bỏ gạch chân */
            }

                .freelancer-card .skills span {
                    background-color: black;
                    color: white;
                    padding: 5px 10px;
                    border-radius: 15px;
                    margin: 5px;
                }

        .rating {
            display: flex;
        }



    </style>
</head>

<body>
    <div class="menu"> </div>
    <div class="menulist">
        <div>
            <h1 id="WFL" class="menuText" style="font-style: italic;">
                WFL.com
            </h1>
            <h1 id="Browse" , class="menuText">
                Browse
            </h1>
            <h1 id="pAP" , class="menuText">
                Post a project
            </h1>
        </div>
        <div>
            <div id="noti" , class="menucpn">
            </div>
            <div id="folder" , class="menucpn">
            </div>
            <div id="profile" , class="menucpn">
            </div>
            <div id="profile_name" , class="menucpn">
                username
            </div>
        </div>
    </div>


    <form >
        <div style="display: flex; margin-top: 10px;">
            <h1 id="browse">Browse</h1>
            <input id="browsetextbox" cols="30" rows="1" 
                   style="font-size: 20px; width: 50%; height: 35px; border-radius: 20px; border: 2px solid rgba(0,0,0,0.3);"></input>
            <Button id="search">Search</Button>
        </div>
    </form>
   





    <div style="display: flex;">
        <h3 id="freelancer" style="font-size: 23px;">Freelancer</h3>
        <h3 id="project" style="font-size: 23px;">Project</h3>
    </div>
    <div style="display: flex;">
        <div id="filterbox">
            <h1 id="filtertext" style="font-size: 25px;">Filters</h1>
            <h1 id="skills" style="font-size: 20px;">Skills</h1>
            <textarea id="skilltextbox" cols="23" rows="1"
                style="font-size: 20px; width: 75%; height: 35px; border-radius: 20px; border: 2px solid rgba(0,0,0,0.3);"></textarea>

          
                @foreach (var skill in Model.First().ListSkill)
                {
                    <div id="checkbox1" style="display: flex;">
                        <input type="checkbox" style="width: 20px; height: 20px;" onchange="handleCheckboxChange('@skill')">
                        <div id="mad" style="font-size: 18px;">@skill</div>
                    </div>
                }
            
           


            <form asp-action="BrowseFreelancer" method="get" class="form-inline">
                <h1 id="country" style="font-size: 20px;">Country</h1>
                <textarea id="countrytextbox" cols="23" rows="1"
                          style="font-size: 20px; width: 75%; height: 35px; border-radius: 20px; border: 2px solid rgba(0,0,0,0.3);"></textarea>
            </form>
            





            <div style="display: flex; margin-left: 50px;">
                <h2 id="textrating" style="font-size: 20px;">Rating</h2>
                <div class="rating">
                    <span class="star">&#9733;</span>
                    <span class="star">&#9733;</span>
                    <span class="star">&#9733;</span>
                    <span class="star">&#9733;</span>
                    <span class="star">&#9733;</span>
                </div>
            </div>

        </div>
        <div id="topresultbox">
            <h1 id="topresulttext" style="font-size: 25px;">Top Results</h1>

            
                @foreach (var freelancer in Model)
                {
                    <div class="col-md-12 mb-4">
                        <a href="@Url.Action("FreelancerDetail", "User", new { id = freelancer.id })" class="freelancer-card">
                            <img src="~/image/cropped-1920-1080-1339443.png" alt="@freelancer.UserName" />
                            <div>
                                <h5>@freelancer.UserName</h5>
                            
                                <p><strong>Rating:</strong> @freelancer.Rating</p>
                                <p><strong>Country:</strong> @freelancer.Country</p>
                                <p><strong>Description:</strong> @freelancer.Description</p>
                                <div class="skills">
                                    @foreach (var skill in freelancer.FreelancerSkill)
                                    {
                                        <span>@skill</span>
                                    }
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
           
                </div>
            }

        </div>
    </div>

    <script>
       
    </script>
</body>

</html>