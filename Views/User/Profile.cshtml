@{
    Layout = null;
}
@using PBL3.ViewModels
@model ProfileViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">


    <title>Profile</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css//Profile.css">
    <style type="text/css">

    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="profile-card-4 z-depth-3">
                    <div class="card">
                        <div class="card-body text-center bg-dark rounded-top">
                            <div class="user-box">
                                <img src="~/image/chovy1.jpg" alt="user avatar">
                            </div>
                            <h5 class="mb-1 text-white">@Model.freelancer.User.Username</h5>

                        </div>
                        <div class="container mt-5">
                            <ul class="nav nav-tabs" id="profileTab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="freelancer-tab" data-toggle="tab" href="#freelancer" role="tab" aria-controls="freelancer" aria-selected="true">Freelancer</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="client-tab" data-toggle="tab" href="#client" role="tab" aria-controls="client" aria-selected="false">Client</a>
                                </li>
                            </ul>
                            <div class="tab-content" id="profileTabContent">
                                <!-- Freelancer Tab -->
                                <div class="tab-pane fade show active" id="freelancer" role="tabpanel" aria-labelledby="freelancer-tab">
                                    <div class="card mt-3">
                                        <div class="card-body">
                                            <ul class="list-group shadow-none">
                                                <li class="list-group-item">
                                                    <div class="list-icon">
                                                        <i class="fa fa-phone-square"></i>
                                                    </div>
                                                    <div class="list-details">
                                                        <span>@Model.freelancer.User.CreatedAt</span>
                                                        <small>Create At</small>
                                                    </div>
                                                </li>
                                                <li class="list-group-item">
                                                    <div class="list-icon">
                                                        <i class="fa fa-envelope"></i>
                                                    </div>
                                                    <div class="list-details">
                                                        <span>@Model.freelancer.User.Email</span>
                                                        <small>Email Address</small>
                                                    </div>
                                                </li>
                                                <li class="list-group-item">
                                                    <div class="list-icon">
                                                        <i class="fa fa-globe"></i>
                                                    </div>
                                                    <div class="list-details">
                                                        <span>0123456789</span>
                                                        <small>Phone Number</small>
                                                    </div>
                                                </li>
                                            </ul>
                                            <div class="row text-center mt-4">
                                                <div class="col p-2">
                                                    <h4 class="mb-1 line-height-5">@Model.jobcount</h4>
                                                    <small class="mb-0 font-weight-bold">Projects</small>
                                                </div>
                                                <div class="col p-2">
                                                    @if (Model.freelancer.Rating == null)
                                                    {
                                                        <h4 class="mb-1 line-height-5">0</h4>
                                                    }
                                                    else
                                                    {
                                                        <h4 class="mb-1 line-height-5">@Model.freelancer.Rating</h4>
                                                    }
                                                    <small class="mb-0 font-weight-bold">Ratings</small>
                                                </div>
                                                <div class="col p-2">
                                                    <h4 class="mb-1 line-height-5">@Model.freelancerreviews.Count()</h4>
                                                    <small class="mb-0 font-weight-bold">Reviews</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Client Tab -->
                                <div class="tab-pane fade" id="client" role="tabpanel" aria-labelledby="client-tab">
                                    <div class="card mt-3">
                                        <div class="card-body">
                                            <ul class="list-group shadow-none">
                                                <li class="list-group-item">
                                                    <div class="list-icon">
                                                        <i class="fa fa-phone-square"></i>
                                                    </div>
                                                    <div class="list-details">
                                                        <span>@Model.client.User.Email</span>
                                                        <small>Create At</small>
                                                    </div>
                                                </li>
                                                <li class="list-group-item">
                                                    <div class="list-icon">
                                                        <i class="fa fa-envelope"></i>
                                                    </div>
                                                    <div class="list-details">
                                                        <span>@Model.freelancer.User.Email</span>
                                                        <small>Email Address</small>
                                                    </div>
                                                </li>
                                                <li class="list-group-item">
                                                    <div class="list-icon">
                                                        <i class="fa fa-globe"></i>
                                                    </div>
                                                    <div class="list-details">
                                                        <span>0123456789</span>
                                                        <small>Phone Number</small>
                                                    </div>
                                                </li>
                                            </ul>
                                            <div class="row text-center mt-4">
                                                <div class="col p-2">
                                                    <h4 class="mb-1 line-height-5">@Model.openProject</h4>
                                                    <small class="mb-0 font-weight-bold">Open Projects</small>
                                                </div>
                                                <div class="col p-2">
                                                    <h4 class="mb-1 line-height-5">@Model.activeProject</h4>
                                                    <small class="mb-0 font-weight-bold">Active Projects</small>
                                                </div>

                                                <div class="col p-2">
                                                    <h4 class="mb-1 line-height-5">@Model.pastProject</h4>
                                                    <small class="mb-0 font-weight-bold"> Past Projects</small>
                                                </div>
                                                <div class="col p-2">
                                                    <h4 class="mb-1 line-height-5">@Model.totalProject</h4>
                                                    <small class="mb-0 font-weight-bold">Total Projects</small>
                                                </div>
                                                <div class="col p-2">
                                                    @if (Model.client.Rating == null)
                                                    {
                                                        <h4 class="mb-1 line-height-5">0</h4>
                                                    }
                                                    else
                                                    {
                                                        <h4 class="mb-1 line-height-5">@Model.client.Rating</h4>
                                                    }
                                                    <small class="mb-0 font-weight-bold">Ratings</small>
                                                </div>
                                                <div class="col p-2">
                                                    <h4 class="mb-1 line-height-5">@Model.Clientreviews.Count()</h4>
                                                    <small class="mb-0 font-weight-bold">Reviews</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer text-center">
                            <a href="javascript:void()" class="btn-social btn-facebook waves-effect waves-light m-1"><i class="fa fa-facebook"></i></a>
                            <a href="javascript:void()" class="btn-social btn-google-plus waves-effect waves-light m-1"><i class="fa fa-google-plus"></i></a>
                            <a href="javascript:void()" class="list-inline-item btn-social btn-behance waves-effect waves-light"><i class="fa fa-behance"></i></a>
                            <a href="javascript:void()" class="list-inline-item btn-social btn-dribbble waves-effect waves-light"><i class="fa fa-dribbble"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card z-depth-3">
                    <div class="card-body">
                        <ul class="nav nav-pills nav-pills-primary nav-justified">
                            <li class="nav-item">
                                <a href="javascript:void();" data-target="#profile" data-toggle="pill" class="nav-link active show"><i class="icon-user"></i> <span class="hidden-xs">Profile</span></a>
                            </li>
                            <li class="nav-item">
                                <a href="javascript:void();" data-target="#messages" data-toggle="pill" class="nav-link"><i class="icon-envelope-open"></i> <span class="hidden-xs">Reviews</span></a>
                            </li>
                            <li class="nav-item">
                                <a href="javascript:void();" data-target="#edit" data-toggle="pill" class="nav-link"><i class="icon-note"></i> <span class="hidden-xs">Edit</span></a>
                            </li>
                        </ul>
                        <div class="tab-content p-3">
                            <div class="tab-pane active show" id="profile">
                                <h5 class="mb-3">User Profile</h5>
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6>Location</h6>
                                        <p>
                                            @Model.freelancer.Location
                                        </p>
                                        <h6>First Name</h6>
                                        <p>
                                            @Model.freelancer.User.FirstName
                                        </p>
                                        <h6>Last Name</h6>
                                        <p>
                                            @Model.freelancer.User.LastName
                                        </p>

                                    </div>
                                    <div class="col-md-6">
                                        <h6>Top Skills</h6>


                                        @foreach (var i in Model.freelancer.hasskills)
                                        {
                                            <p class="badge badge-dark badge-pill">
                                                @i.Skill.Name
                                            </p>
                                        }

                                        <hr>

                                    </div>
                                    <div class="col-md-12">
                                        <h5 class="mt-2 mb-3"><span class="fa fa-clock-o ion-clock float-right"></span> Description</h5>
                                        <textarea class="form-control" rows="8" readonly>
                                            @Model.freelancer.Description
  </textarea>
                                    </div>




                                </div>

                            </div>















                            <div class="tab-pane" id="messages">
                                <!-- Tabs for Freelancer and Client -->
                                <ul class="nav nav-tabs" id="messageSubTab" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" id="freelancer-messages-tab" data-toggle="tab" href="#freelancer-messages" role="tab" aria-controls="freelancer-messages" aria-selected="true">Freelancer</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="client-messages-tab" data-toggle="tab" href="#client-messages" role="tab" aria-controls="client-messages" aria-selected="false">Client </a>
                                    </li>
                                </ul>

                                <!-- Tab Content -->
                                <div class="tab-content" id="messageSubTabContent">
                                    <!-- Freelancer Messages -->
                                    <div class="tab-pane fade show active" id="freelancer-messages" role="tabpanel" aria-labelledby="freelancer-messages-tab">
                                        <div class="alert alert-info alert-dismissible" role="alert">
                                            <button type="button" class="close" data-dismiss="alert">×</button>
                                            <div class="alert-icon">
                                                <i class="icon-info"></i>
                                            </div>
                                            <div class="alert-message">
                                                <span><strong>Info!</strong> All Review for this Freelancer</span>
                                            </div>
                                        </div>
                                        <table class="table table-hover table-striped">
                                            <tbody>
                                                @foreach (var i in Model.freelancerreviews)
                                                {
                                                    <tr>
                                                        <td>
                                                            <div class="d-flex justify-content-between">
                                                                <a href="@Url.Action("JobDetail", "User", new {id = i.JobID})"> <h5>@i.Job.Name</h5>  </a>
                                                                @i.Grade
                                                            </div>

                                                            <span class="float-left ">@i.Comment</span>
                                                        </td>
                                                    </tr>
                                                }

                                                <!-- More freelancer messages -->
                                            </tbody>
                                        </table>
                                    </div>

                                    <!-- Client Messages -->
                                    <div class="tab-pane fade" id="client-messages" role="tabpanel" aria-labelledby="client-messages-tab">
                                        <div class="alert alert-info alert-dismissible" role="alert">
                                            <button type="button" class="close" data-dismiss="alert">×</button>
                                            <div class="alert-icon">
                                                <i class="icon-info"></i>
                                            </div>
                                            <div class="alert-message">
                                                <span><strong>Info!</strong> All review for this Client</span>
                                            </div>
                                        </div>
                                        <table class="table table-hover table-striped">
                                            <tbody>
                                                @foreach (var i in Model.Clientreviews)
                                                {
                                                    <tr>
                                                        <td>
                                                            <div class="d-flex justify-content-between">
                                                                <a href="@Url.Action("FreelancerDetail", "User", new {id = i.FreelancerID})"> <h5>@i.Freelancer.User.Username</h5>  </a>
                                                                @i.Grade
                                                            </div>

                                                            <span class="float-left ">@i.Comment</span>
                                                        </td>
                                                    </tr>
                                                }

                                                <!-- More client messages -->
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>







                            <div class="tab-pane" id="edit">
                                <form asp-controller="User" asp-action="EditProfile">
                                    <input type="hidden" asp-for="@Model.freelancer.FreelancerID" />
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label form-control-label">First name</label>
                                        <div class="col-lg-9">
                                            <input class="form-control" type="text" asp-for="freelancer.User.FirstName">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label form-control-label">Last name</label>
                                        <div class="col-lg-9">
                                            <input class="form-control" type="text" asp-for="freelancer.User.LastName">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label form-control-label">Description</label>
                                        <div class="col-lg-9">
<textarea class="form-control" rows="8" asp-for="@Model.freelancer.Description">
                                                @Model.freelancer.Description
  </textarea>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label form-control-label">Change profile</label>
                                        <div class="col-lg-9">
                                            <input class="form-control" type="file">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label form-control-label">Country</label>
                                        <div class="col-lg-9">
                                            <input class="form-control" type="text" asp-for="freelancer.Location">
                                        </div>
                                    </div>



                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Skills:</label>
                                        <div class="col-sm-10">
                                            @foreach (var skillName in Model.Allskills)
                                            {
                                                var isChecked = Model.selectedSkills.Contains(skillName); // Check if the freelancer has this skill
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="checkbox" name="selectedSkills" value="@skillName" @(isChecked ? "checked" : "") />
                                                    <label class="form-check-label">@skillName</label>
                                                </div>
                                            }
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-lg-3 col-form-label form-control-label"></label>
                                        <div class="col-lg-9">
                                            <input type="reset" class="btn btn-secondary" value="Cancel">
                                            <input type="submit" class="btn btn-dark" value="Save Changes">
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script data-cfasync="false" src="/cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.1/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript">

    </script>
</body>
</html>